#include <SoftwareSerial.h>

SoftwareSerial gsmSerial(7, 8); // RX, TX

void setup() {
  Serial.begin(9600, SERIAL_8N1); //default for Arduino & SIM800L
  delay(50);
  GSM_init();
  delay(50);
  GSM_sendSMS("Test SMS Sapsan", "+7915");
  delay(50);
  GSM_cleanAllSMS();
}

